# ============================================
# Photo to Video Application - Environment Variables
# Copy this file to .env and customize
# ============================================

# Build target: development or production
BUILD_TARGET=development

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=photouser
POSTGRES_PASSWORD=photopass
POSTGRES_DB=photovideo

# ============================================
# MinIO (S3-compatible Storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# ============================================
# Application Security
# ============================================
SECRET_KEY=your-secret-key-change-in-production

# ============================================
# Frontend URLs (for production build)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================
# GPU / Local AI Settings
# ============================================
ENABLE_LOCAL_MODELS=false
GPU_DEVICE=cuda:0

# ============================================
# Cloud AI API Keys (optional)
# Get your API keys from:
# - Stability AI: https://platform.stability.ai/
# - Runway: https://runwayml.com/
# - Pika: https://pika.art/
# ============================================
STABILITY_API_KEY=
RUNWAY_API_KEY=
PIKA_API_KEY=
